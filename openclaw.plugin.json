{
  "id": "openclaw-lullabully",
  "name": "openclaw-lullabully",
  "version": "1.0.0",
  "description": "AI sleep enforcer that escalates from gentle to nuclear until you go to bed",
  "entry": "dist/index.js",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "name": { "type": "string", "minLength": 1, "description": "Your name (used in messages)" },
      "bedtime": { "type": "string", "default": "23:00", "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$", "description": "Bedtime in HH:MM format" },
      "timezone": { "type": "string", "description": "IANA timezone (auto-detected from system if not set)" },
      "channel": { "type": "string", "default": "telegram", "description": "Messaging channel" },
      "chatId": { "type": "string", "minLength": 1, "description": "Chat/channel ID for messages" },
      "enabled": { "type": "boolean", "default": true }
    }
  }
}
